@model List<WebApplication1.Models.Person>
@{

    ViewBag.Title = "Result of Scan";
}

<h1>Result of Scan</h1>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div>
        <h2 class="text-info header-text">Result of Scan</h2>
        <table class="table table-hover">
            <thead class="table-primary">
                <tr>
                    <th scope="col">PersonId</th>
                    <th scope="col">FullName</th>
                    <th scope="col">EmpCode</th>
                    <th scope="col">Position</th>
                    <th scope="col">OfficeLocation</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var person in Model)
                    {
                        <tr>
                            <td>@person.PersonId</td>
                            <td>@person.FullName</td>
                            <td>@person.EmpCode</td>
                            <td>@person.Position</td>
                            <td>@person.OfficeLocation</td>
                        </tr>
                    }

                }
                else
                {
                    <tr>
                        <td class="text-center" colspan="5">Empty</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a asp-controller="Person" asp-action="Read">Back to list</a>
    </div>
</body>
</html>