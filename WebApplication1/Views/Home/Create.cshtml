@model WebApplication1.Models.Person

@{
    ViewBag.Titele = "Create";
}

<div class="container">
    <h2 class="header-text">Create New</h2>
    <div class="row">
        <div class="col-lg-3"></div>
        <hr />
        <div class="col-lg-6">
            <h4>New Person</h4>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label">Full Name</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmpCode" class="control-label">Emp Code</label>
                    <input asp-for="EmpCode" class="form-control" />
                    <span asp-validation-for="EmpCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position" class="control-label">Position</label>
                    <input asp-for="Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OfficeLocation" class="control-label">OfficeLocation</label>
                    <input asp-for="OfficeLocation" class="form-control" />
                    <span asp-validation-for="OfficeLocation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Создать" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
        <div class="col-lg-3"></div>
    </div>
    <div>
        <a asp-controller="Person" asp-action="Read">Назад к списку</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
